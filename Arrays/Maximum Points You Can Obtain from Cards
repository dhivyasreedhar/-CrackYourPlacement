class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int lsum=0,rsum=0;
        int len=cardPoints.size();
        for(int i=0;i<k;i++)
            lsum+=cardPoints[i];
        int ans=lsum;
        for(int i=0;i<k;i++)
        {
            lsum-=cardPoints[k-i-1];
            rsum+=cardPoints[len-i-1];
            ans=max(ans,lsum+rsum);
        }
        
        return ans;
    }
};
