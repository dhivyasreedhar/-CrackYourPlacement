class Solution {
public:
    void sortColors(vector<int>& nums) {
        int colornums[3]={0};
        for(int i=0;i<nums.size();i++)
            colornums[nums[i]]++;
        for(int i=0;i<nums.size();i++)
        {
            if(colornums[0])
            { nums[i]=0; colornums[0]--;}
            else if(colornums[1])
            {
                nums[i]=1;colornums[1]--;
            }
            else
            {
                nums[i]=2;
            }
        }
        
    }
};
